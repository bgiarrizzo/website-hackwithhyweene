<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  {% set last_post = posts|last %}
  <title>{{ site.short_url }}</title>
  <subtitle>{{ site.description }}</subtitle>

  <updated>{{ last_post.short_date }}</updated>

  <link rel="alternate" type="text/html" href="{{ site.url }}/blog/" />
  <id>{{ site.url }}/blog/</id>
  <link rel="self" type="application/atom+xml" href="{{ site.url }}/blog/feed.xml" />

  {% for post in posts %}
    <entry xml:lang="en">
        <title type="html">{{ post.title }}</title>
        <author>
            <name>{{ post.author }}</name>
            <uri>{{ site.url }}</uri>
        </author>
        <id>{{ site.url }}/blog/{{ post.slug }}/</id>
        <published>{{ post.publish_date }}</published>
        <updated>{{ post.update_date }}</updated>
        <link rel="alternate" type="text/html">{{ site.url }}/blog/{{ post.slug }}/</link>
        {% if post.summary %}
          <summary>
            {{ post.summary }}
          </summary>
        {% endif %}
        <content type="html">
          {{ post.body }}
        </content>
    </entry>
  {% endfor %}
</feed>
