    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Run Build",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: quick_add_link.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/quick_add_link.py",
            "args": [
                "https://www.techdirt.com/2025/10/09/trump-admits-we-took-the-freedom-of-speech-away/"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: check_dead_links.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/check_dead_links.py",
            "console": "integratedTerminal"
        }
    ]
}
